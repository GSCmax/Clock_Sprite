<Window x:Class="Clock_Sprite.View.MainSprite"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clock_Sprite.View"
        mc:Ignorable="d"
        Title="Clock Sprite"
        SizeToContent="WidthAndHeight"
        WindowStyle="None"
        ShowInTaskbar="False"
        ShowActivated="False"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="{x:Null}"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        Topmost="True"
        local:WindowAttach.ShowInTaskManager="False"
        local:WindowAttach.IgnoreAltF4="True"
        local:WindowAttach.IsDragElement="True"
        local:WindowAttach.SnapToScreenEdge="True">
    <Window.Resources>
        <local:Bool2ResourceConverter x:Key="B2RC"/>
    </Window.Resources>
    <Border Background="{StaticResource BackgroundBrush}" Effect="{StaticResource EffectShadow}" CornerRadius="0,10,10,10" Margin="25">
        <local:SimplePanel>
            <TextBlock Name="timeTB" FontSize="31" Text="88:88:88" Foreground="White" Margin="8,4,8,0" HorizontalAlignment="Center"
                       FontFamily="/Clock_Sprite;component/Resources/#HP15C Simulator Font"/>
            <TextBlock Name="dateTB" FontSize="21" Text="88.88.88-888" Foreground="White" Margin="8,37,8,3" HorizontalAlignment="Center"
                       FontFamily="/Clock_Sprite;component/Resources/#HP15C Simulator Font"/>
            <Button Name="closeBTN" Visibility="Collapsed"
                    Width="20" Height="20" Style="{StaticResource ButtonIcon}"
                    Foreground="{StaticResource HighlightBrush}" Background="White"
                    Click="close_Click" MouseLeave="close_or_exit_MouseLeave"
                    local:BorderElement.CornerRadius="10"
                    local:IconElement.Geometry="{StaticResource ErrorGeometry}" Padding="-1"
                    HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-8,-8,0,0"/>
            <Button Name="exitBTN" Visibility="Collapsed"
                    Width="20" Height="20" Style="{StaticResource ButtonIcon}"
                    Foreground="{StaticResource DangerBrush}" Background="White"
                    Click="exit_Click" MouseLeave="close_or_exit_MouseLeave"
                    local:BorderElement.CornerRadius="10"
                    local:IconElement.Geometry="{StaticResource ErrorGeometry}" Padding="-1"
                    HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-8,-8,0,0"/>
            <Button Name="infoBTN" Visibility="Visible"
                    Width="20" Height="20" Style="{StaticResource ButtonIcon}"
                    Foreground="{Binding Topmost, Converter={StaticResource B2RC},ConverterParameter='HighlightBrush|BackgroundBrush', RelativeSource={RelativeSource AncestorType=Window}}" Background="White"
                    Click="info_Click" MouseDoubleClick="info_MouseDoubleClick" MouseWheel="info_MouseWheel"
                    local:BorderElement.CornerRadius="10"
                    local:IconElement.Geometry="{StaticResource InfoGeometry}" Padding="-1"
                    HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-8,-8,0,0">
            </Button>
        </local:SimplePanel>
    </Border>
</Window>
